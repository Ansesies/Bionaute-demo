<script>
  let servicesObserver: IntersectionObserver | null = null;

  // Declaraciones TypeScript para funciones del window
  declare global {
    interface Window {
      isMobile?: () => boolean;
      isIOS?: () => boolean;
      getMobileDelay?: () => number;
      iOSFixes?: {
        isInBackground: boolean;
        activeObservers: Array<{observer: IntersectionObserver, pageName: string}>;
        registerObserver: (observer: IntersectionObserver, pageName: string) => void;
        cleanup: () => void;
      };
    }
  }

  // Función para inicializar la animación cuando el elemento es visible
  function handleIntersection(entries: IntersectionObserverEntry[]) {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('in-view');
      }
    });
  }

  // Función para limpiar animaciones previas
  function resetAnimations() {
    // Remover clases de animación existentes
    document.querySelectorAll('.service-card, .process-step, .analysis-card').forEach(element => {
      element.classList.remove('in-view');
    });
    
    // Desconectar observer anterior si existe
    if (servicesObserver) {
      servicesObserver.disconnect();
    }
  }

  // Función para configurar el observador
  function setupServicesAnimation() {
    // Limpiar animaciones previas
    resetAnimations();
    
    // Configuración específica para móviles
    const isMobileDevice = window.isMobile ? window.isMobile() : false;
    const isIOSDevice = window.isIOS ? window.isIOS() : false;
    
    const observerConfig = {
      threshold: isMobileDevice ? (isIOSDevice ? 0.02 : 0.05) : 0.1, // iOS necesita threshold muy bajo
      rootMargin: isMobileDevice ? 
        (isIOSDevice ? '50px 0px 50px 0px' : '0px 0px -10% 0px') : 
        '0px 0px -20% 0px'
    };
    
    // Crear nuevo observer
    servicesObserver = new IntersectionObserver(handleIntersection, observerConfig);

    // Registrar en iOS system si está disponible
    if (isIOSDevice && window.iOSFixes) {
      window.iOSFixes.registerObserver(servicesObserver, 'services');
    }

    // Observar todos los elementos animados
    document.querySelectorAll('.service-card, .process-step, .analysis-card').forEach(element => {
      if (servicesObserver) {
        servicesObserver.observe(element);
      }
    });
  }

  // Función para inicializar la página
  function initializeServicesPage() {
    // Delay específico para el tipo de dispositivo
    const delay = window.getMobileDelay ? window.getMobileDelay() : 100;
    setTimeout(setupServicesAnimation, delay);
  }

  // Limpiar al salir de la página
  function cleanupServicesPage() {
    if (servicesObserver) {
      servicesObserver.disconnect();
      servicesObserver = null;
    }
  }

  // Función de inicialización robusta para móviles
  function robustServicesInit() {
    // En móviles, a veces necesitamos múltiples intentos
    if (window.isMobile && window.isMobile()) {
      let attempts = 0;
      const maxAttempts = 3;
      
      function tryInit() {
        attempts++;
        if (document.readyState === 'complete') {
          initializeServicesPage();
        } else if (attempts < maxAttempts) {
          setTimeout(tryInit, 50);
        } else {
          initializeServicesPage(); // Inicializar de todos modos
        }
      }
      
      tryInit();
    } else {
      initializeServicesPage();
    }
  }

  // Handlers específicos para iOS
  function handleiOSPause() {
    if (servicesObserver) {
      servicesObserver.disconnect();
    }
  }

  function handleiOSReactivate() {
    // Reactivar con delay en iOS
    setTimeout(setupServicesAnimation, 200);
  }

  function handleiOSScrollEnd() {
    // Re-trigger intersection checks manualmente en iOS
    if (servicesObserver && window.isIOS && window.isIOS()) {
      document.querySelectorAll('.service-card, .process-step, .analysis-card').forEach(element => {
        if (!element.classList.contains('in-view')) {
          const rect = element.getBoundingClientRect();
          const windowHeight = window.innerHeight;
          // Trigger manual si el elemento está visible
          if (rect.top < windowHeight * 0.8 && rect.bottom > windowHeight * 0.2) {
            element.classList.add('in-view');
          }
        }
      });
    }
  }

  // Inicializar cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', robustServicesInit);
  
  // Reinicializar después de las transiciones de página de Astro
  document.addEventListener('astro:page-load', robustServicesInit);
  
  // Limpiar antes de las transiciones
  document.addEventListener('astro:before-preparation', cleanupServicesPage);
  
  // Para dispositivos móviles - listener adicional
  if (window.isMobile && window.isMobile()) {
    window.addEventListener('load', () => {
      setTimeout(robustServicesInit, window.getMobileDelay ? window.getMobileDelay() : 150);
    });
  }

  // Listeners específicos para iOS
  if (window.isIOS && window.isIOS()) {
    window.addEventListener('ios-pause-observers', handleiOSPause);
    window.addEventListener('ios-reactivate-observers', handleiOSReactivate);
    window.addEventListener('ios-scroll-end', handleiOSScrollEnd);
  }
</script>
<style>
  /* Animaciones para el footer */
  .wave-top {
    width: 100%;
    height: 50px;
    transform: translateY(-49px);
  }
  
  /* Patrón de puntos */
  .pattern-dots {
    background-image: radial-gradient(currentColor 1px, transparent 1px);
    background-size: 20px 20px;
  }
  
  /* Animaciones para el footer - Versión simplificada */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  /* Configuración base del footer */
  footer#footer {
    display: block;
    visibility: visible;
    opacity: 1;
  }

  /* Estado inicial de los elementos del footer */
  .footer-content .footer-item,
  .footer-divider,
  .footer-bottom {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    visibility: visible;
  }

  /* Estado animado - cuando se activa con scroll */
  .footer-content .footer-item.animated,
  .footer-divider.animated,
  .footer-bottom.animated {
    opacity: 1;
    transform: translateY(0);
  }

  /* Mantener el contenido del footer visible */
  .footer-item *,
  .footer-bottom * {
    opacity: 1;
    visibility: visible;
  }
  
  /* Añadimos un efecto especial para elementos con la clase footer-animated */
  .footer-item.footer-animated::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 30%;
    height: 1px;
    background: linear-gradient(90deg, rgba(134, 239, 172, 0.3), transparent);
    opacity: 0;
    animation: fadeInGlow 1.5s forwards 0.5s;
  }
  
  @keyframes fadeInGlow {
    0% { opacity: 0; width: 0; }
    50% { opacity: 1; width: 30%; }
    100% { opacity: 0; width: 80%; }
  }
  
  /* Configuración base del footer (sin forzar visibilidad) */
  footer#footer {
    min-height: 300px;
    position: relative;
    z-index: 10;
  }
</style>

<script>
  function initFooterAnimations() {
    const footer = document.getElementById('footer');
    if (!footer) return;

    const items = footer.querySelectorAll('.footer-item, .footer-divider, .footer-bottom');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          // Agregar delays escalonados para animación secuencial
          items.forEach((item, index) => {
            setTimeout(() => {
              item.classList.add('animated');
            }, index * 100); // 100ms delay entre elementos
          });
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.2,  // Trigger cuando 20% del footer es visible
      rootMargin: '50px' // Margen adicional para trigger anticipado
    });

    observer.observe(footer);
  }

  // Inicializar en carga de página y transiciones de Astro
  document.addEventListener('DOMContentLoaded', initFooterAnimations);
  document.addEventListener('astro:page-load', initFooterAnimations);
</script>